{
	"compilerOptions": {
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react",
		"jsxFactory": "syntactic.createAstNode",
		"moduleResolution": "node",
		"strict": true,
		"target": "es6",
		"lib": ["es6"]
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/__tests__/**/*",
		"**/lib/**/*"
	]
}
